@model IEnumerable<DoAnWebTruyenTranh.Models.Chapter>

@{
    ViewBag.Title = "Sửa Truyện";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>SuaTruyen</h2>

<p>
    @Html.ActionLink("Create New", "Create", new {id=Model.First().IDManga})
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Truyen.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CSequence)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Truyen.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CSequence)
        </td>
        <td>
            @Html.ActionLink("Sửa", "SuaChapters", new { id = item.IDChapter })
        </td>
    </tr>
}

</table>
